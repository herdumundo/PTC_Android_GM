<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_principal">

    <TextView
        android:id="@+id/txt_estado"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:text="CONECTANDO..."
        android:textAlignment="textStart"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="64dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="97dp"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="PENDIENTES DE ENVIO"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_desm2"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ir_liberados"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:background="@drawable/boton_azul"
        android:drawableLeft="@mipmap/ic_sincronizar"
        android:onClick="sincro"
        android:text="SINCRONIZAR LOTES DISPONIBLES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/btn_desm3"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ir_liberados"
        android:layout_centerInParent="true"
        android:layout_marginTop="199dp"
        android:background="@drawable/boton_negro"
        android:drawableLeft="@mipmap/ic_informe"
        android:onClick="ir_informe_exportacion_fallida"
        android:text="INFORMES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/btn_ir_liberados"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:background="@drawable/botonverde"
        android:onClick="ir_liberados"
        android:text="REGISTROS PTC LIBERADOS"
        android:textColorHighlight="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/btn_desm"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ir_liberados"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/boton2"

        android:text="REGISTRO PTC RETENIDOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="165dp" />

</RelativeLayout>